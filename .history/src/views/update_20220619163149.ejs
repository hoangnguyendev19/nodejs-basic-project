<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update user</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="update-user-container">
      <form action="/update-user" method="POST">
        <div>
          <label>Name:</label>
          <input name="name" value="<%= dataUser.name %>" />
        </div>
        <div>
          <label>Gender</label>
          <input name="gender" value="<%= dataUser.gender %>" />
        </div>
        <div>
          <label>Email:</label>
          <input name="email" value="<%= dataUser.email %>" />
        </div>
        <div>
          <label>Address:</label>
          <input name="address" value="<%= dataUser.address %>" />
        </div>
        <input type="text" value="<%= dataUser.id %>" hidden name="id" />
        <div>
          <button class="btn-save" type="submit">Save</button>
        </div>
      </form>
    </div>
  </body>
</html>
